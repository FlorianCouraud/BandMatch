<div class="row justify-content-center my-4">
  <div class="col-12 col-lg-7">
    <div class="card-trip m-3">
      <img src="<%= asset_path 'color2.png' %>">
      <div id="avatar-card">
        <%= cl_image_tag @user.photo, class: "card-trip-user avatar-bordered" %>
      </div>
      <div class="card-trip-infos">
        <div class="container text-center">
          <h1><%= @user.first_name %> <%= @user.last_name %></h1>
          <p><%= @user.age %> yrs</p>
          <% if current_user.nil? %>
            <div class="my-3"><%= button_to "Message me", new_user_session_path, :class => "btn-message" %></div>
          <% else %>
            <div class="my-3"><%= button_to "Message me", conversations_path(sender_id: current_user.id, recipient_id: @user.id), :class => "btn-message" %></div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="card-trip m-3">
      <div class="card-trip-infos">
        <div class="container">
          <h3><i class="fas fa-users"></i> Bands</h3>
          <hr>
          <% @members.each do |member| %>
            <div class="notification" style="width:300px">
              <img src="https://images.pexels.com/photos/1309240/pexels-photo-1309240.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" class="avatar" alt="">
              <div class="notification-content">
                <p><%= link_to member.band.name, band_path(member.band) %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="card-trip m-3">
      <div class="card-trip-infos">
        <div class="container">
          <h3><i class="fas fa-guitar"></i> Instruments</h3>
          <hr>
          <% @instruments.each do |instrument| %>
            <div class="my-1" >
              <button type="button" class="btn-style" disabled><%= instrument.instrument.name %></button>
            </div>
          <% end  %>
        </div>
        <div class="container">
          <h3><i class="fas fa-music"></i> Styles</h3>
          <hr>
          <% @styles.each do |style| %>
            <div class="my-1" >
              <button type="button" class="btn-style" disabled><%= style.style.name %></button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="container">
      <h3>Soundcloud</h3>
      <iframe width="100%" height="190" scrolling="no" frameborder="no" allow="autoplay" src= "<%= @user.link1 %>" ></iframe>
    </div>
    <div class="container">
      <h3>Youtube</h3>
      <iframe width= "100%" height="500"
      src= "<%= @user.link2 %>" ></
      </iframe>
    </div>
  </div>
</div>
</div>