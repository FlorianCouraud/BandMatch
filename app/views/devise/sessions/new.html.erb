<div class="container"><h2 class="text-center m-4">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs mx-auto text-center" style="width: 300px;">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
  <div class="text-center">
  <div class="form-actions btn btn-message">
    <%= f.button :submit, "Log in", class: "color-white" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
</div>
