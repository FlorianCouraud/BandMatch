<div class="main-container">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(<%= asset_path 'rocco-dipoppa-668739-unsplash.jpg' %>);">
    <div class="container body">
      <div class="row justify-content-center">
        <div class="col-12 col-lg-7">
          <h1>BandMatch</h1>
          <div class="button-join">
            <p>Meet musicians. Start a band.</p>
        </div>
      </div>
    </div>
    <div >
      <%= form_tag users_path, method: :get do %>
      <div class="form-row justify-content-center">
        <div class="mx-2">
          <%= text_field_tag :query,params[:query], class: "form-control",placeholder: "Enter your city",id: "search_query" %>
        </div>
        <div class="mx-2">
          <%=  select_tag :query2, options_for_select(@instruments.collect{ |u| [u.name] }, params[:query2]), class: "form-control"%>
        </div>
        <div class="mx-2">
          <%= submit_tag "Search", class: "btn-message" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
