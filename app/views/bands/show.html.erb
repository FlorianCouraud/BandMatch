<div class="row justify-content-center my-4">
  <div class="col-12 col-lg-7">
    <div class="card-trip m-3">
      <img src="https://images.pexels.com/photos/167636/pexels-photo-167636.jpeg?auto=format%2Ccompress&cs=tinysrgb&dpr=1&w=500">
      <div class="card-trip-infos">
        <div class="container text-center">
          <h1><%= @band.name %></h1>
        </div>
      </div>
    </div>
    <div class="card-trip m-3">
      <div class="card-trip-infos">
        <div class="container">
          <h2><i class="fas fa-users"></i> Members</h2>
          <hr>
            <% @members.each do |member| %>
           <%= link_to user_path(member.user) do %>
              <div class="card-product">
                <%= cl_image_tag member.user.photo, :transformation=>[
                  {:width=>400, :height=>400, :gravity=>"face",  :crop=>"crop"},
                  {:width=>200}
                ] %>
                <div class="card-product-infos d-flex justify-content-between">
                  <div>
                    <h2><%= member.user.first_name %> <%= member.user.last_name %></h2>
                    <hr>
                   <%= member.user.city %>
                   <hr>
                   <div class="my-3"><%= button_to "Send message",  conversations_path(sender_id: current_user.id, recipient_id: member.user.id), method: :post, :class => "btn-message" %></div>
                  </div>
                  <div>

                  </div>
                </div>
              </div>
              <hr>
            <% end %>
          <% end  %>
        </div>
      </div>
    </div>
  </div>
</div>
